
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Sherbim";
    if (Session["login"] == null)
    {
        Response.Redirect("~/Login/Login");
    }
}

<h2>Sherbim</h2>
@using (Html.BeginForm("SherbimPost","MenaxhoSherbime",FormMethod.Post))
{
    <div class="row">
        <div class="col-md-4">

        </div>
        <div class="col-md-4">
            <table class="table">
                <tr>
                    <td>
                        <label>Emri:</label>
                    </td>
                    <td><input id="Text1" name="txtEmri" type="text" /></td>
                </tr>
                <tr>
                    <td>
                        <label>Mekaniku:</label>
                    </td>
                    <td>@Html.DropDownList("Liste","Zgjidh nje:")</td>
                </tr>
                <tr>
                    <td>
                        <label>Tipi:</label>
                    </td>
                    <td><input id="Text1" name="txtTipi" type="text" /></td>
                </tr>
                <tr>
                    <td>
                        <label>Pershkrim: </label>
                    </td>
                    <td>
                        <textarea id="TextArea1" name="txtPershkrim" rows="5" cols="50"></textarea>
                    </td>
                </tr>
                <tr>
                    <td>
                        <input id="Submit1" type="submit" value="submit" />
                    </td>
                    <td>
                        <input id="Reset1" type="reset" value="reset" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
}
