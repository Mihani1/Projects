
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "DetajeSherbimi";
    if (Session["login"] == null)
    {
        Response.Redirect("~/Login/Login");
    }
}

<h2>DetajeSherbimi</h2>

<div class="row">
    <div class="col-md-4">
        
    </div>
    <div class="col-md-4">
        @using (Html.BeginForm("DetajeSherbimiPost", "MenaxhoSherbime", FormMethod.Post))
        {
            <table class="table">
                <tr>
                    <td>Pjese:</td>
                    <td>@Html.DropDownList("Liste","Zgjidh nje:")</td>
                </tr>
                <tr>
                    <td>Sasia:</td>
                    <td><input id="Text1" name="txtSasia" type="text" /></td>
                </tr>
                <tr>
                    <td>Cmimi:</td>
                    <td><input id="Text1" name="txtCmimi" type="text" /></td>
                </tr>
                <tr>
                    <td><input id="Submit1" type="submit" value="Shto" /></td>
                </tr>
                <tr>
                    <td>
                        @ViewBag.Message1
                    </td>
                </tr>
                <tr>
                    <td>
                        @ViewBag.Message2
                    </td>
                </tr>
            </table>
        }

        @using (Html.BeginForm("SherbimiDone","MenaxhoSherbime",FormMethod.Post))
        {
            <input id="Submit1" type="submit" value="Perfundo" />
        }
        
    </div>
</div>